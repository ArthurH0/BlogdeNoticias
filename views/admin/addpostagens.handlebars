<div class="card">
  <div class="card-body">
    <form action="/admin/posts/novo" method="POST">
      <label for="titulo">Titulo</label>
      <input type="text" name="titulo" placeholder="Titulo do post" class="form-control">
      <label for="slug">Slug</label>
      <input type="text" name="slug" placeholder="Slug do post" class="form-control">
      <label for="descricao">Descrição</label>
      <input type="text" name="descricao" placeholder="Descricao do post" class="form-control">
      <label for="conteudo">Conteudo</label>
      <textarea  name="conteudo" placeholder="Conteudo do post" class="form-control"></textarea> 
      <label for="categoria">Categoria</label>
      <select class="custom-select" name="categoria">
        {{#each categorias}}
        <option value="{{_id}}">{{nome}}</option>
        {{else}}
        <option value="0">Nenhuma categoria encontrada</option>
        {{/each}}
      </select> 
      <button class="btn btn-success mt-2" type="submit">Publicar post</button>
    </form>
  </div>
</div>