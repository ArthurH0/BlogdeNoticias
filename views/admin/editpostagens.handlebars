<h1>Editando Posts</h1>

<form action="/admin/posts/edit/novo" method="POST">
  <label for="titulo">Titulo</label>
  <input type="hidden" value="{{postagem._id}}" name="id" id="id">
  <input type="text" name="titulo" value="{{postagem.titulo}}" placeholder="Titulo do post" class="form-control">
  <label for="slug">Slug</label>
  <input type="text" name="slug" value="{{postagem.slug}}" placeholder="Slug do post" class="form-control">
  <label for="descricao">Descrição</label>
  <input type="text" value="{{postagem.descricao}}" name="descricao" placeholder="Descricao do post"
    class="form-control">
  <label for="conteudo">Conteudo</label>
  <textarea name="conteudo" placeholder="Conteudo do post"
    class="form-control">{{postagem.conteudo}}</textarea>
  <label for="categoria">Categoria</label>
  <select class="custom-select" name="categoria">
    {{#each categorias}}
    <option value="{{_id}}" name="categoria">{{nome}}</option>
    {{else}}
    <option value="0">Nenhuma categoria encontrada</option>
    {{/each}}
  </select>
  <button class="btn btn-success mt-2" type="submit">Publicar post</button>
</form>