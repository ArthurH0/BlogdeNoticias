<h2>Lista de Postagens</h2>

{{>_msg}}

<div class="container ">
  <form class="d-flex" action="/admin/posts">
    <input type="text" name="titulo" placeholder="Pesquisar post" class="form-control d-flex">
    <button type="submit" class="btn btn-success  m-3">Pesquisar</button>
  </form>
  <a href="/admin/posts/add"><button type="button" class="btn btn-success mt-2 mb-3">Adicionar Postagens</button></a>
</div>



{{#each postagens}}
<div class="card mt-4 mb-4">
  <div class="card-body">
    <h4>{{titulo}}</h4>
    <p>Descrição: {{descricao}}</p>
    <p>Conteudo: {{conteudo}}</p>
    <p>Categoria :{{categoria.nome}}</p>
    <a href="/admin/posts/edit/{{_id}}"><button type="submit" class="btn btn-success">Editar postagem</button></a>
    <form action="/admin/posts/deletar" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-danger mt-3">Apagar postagem</button>
    </form>

  </div>
</div>
{{else}}
<div class="mt-2"> Nenhum postagem encontrada</div>
{{/each}}

